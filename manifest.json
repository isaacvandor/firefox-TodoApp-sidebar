{

    "manifest_version": 2,
    "name": "To-do Sidebar",
    "description": "Displays Microsoft To-do Web App in the sidebar.",
    "homepage_url": "https://github.com/isaacvandor/firefox-msofttodo-sidebar",
    "version": "1.0",
    "applications": {
        "gecko": {
          "strict_min_version": "60.0"
        }
    },

    "options_ui": {
      "page": "options/options.html",
      "browser_style": true
    },

    "sidebar_action": {
	"default_icon": "icons/todo-48.png",
        "default_title": "Microsoft To Do",
        "default_panel": "sidebar/panel.html"
    },

    "icons": {
        "48": "icons/todo-48.png",
        "96": "icons/todo-96.png"
      },

    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Shift+Alt+Z"
            },
            "description": "Toggle the sidebar window"
        }
    }
}
